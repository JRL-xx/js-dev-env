  "repository": {
    "type": "git",
    "url": "https://github.com/JRL-xx/js-dev-env.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "@types/express": "^4.16.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "compression": "latest",
    "css-loader": "^2.0.1",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-watch": "^4.0.2",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^13.1.0",
    "json-schema-faker": "^0.5.0-rc16",
    "json-server": "^0.14.0",
    "localtunnel": "^1.9.1",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "open": "0.0.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "url-search-params-polyfill": "^5.0.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "whatwg-fetch": "^3.0.0",
    "terser-webpack-plugin": "latest"
  },
  "scripts": {
    "startMessage": "babel-node buildScripts/startMessage.js",
    "prestart": "npm --silent run startMessage",
    "start": "npm-run-all --parallel open:src lint:watch test:watch start-mock-api",
    "localtunnel": "lt --port 3000 --subdomain julien",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "preshare": "npm --silent run startMessage",
    "share": "npm-run-all --silent --parallel open:src localtunnel",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScripts/generateMockData.js",
    "prestart-mock-api": "npm run generate-mock-data",
    "start-mock-api": "json-server --watch src/api/db.json --port 3001",
    "build-direct": "webpack --config webpack.config.prod.js",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js"
  }
}
